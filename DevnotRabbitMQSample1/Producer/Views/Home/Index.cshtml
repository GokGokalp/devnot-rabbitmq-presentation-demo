@{
    ViewBag.Title = "Create Order";
    <style>
        form {
            margin: 0 auto;
            width: 320px;
            padding: 1em;
            border: 1px solid #CCC;
            border-radius: 1em;
        }

            form div + div {
                margin-top: 1em;
            }

        label {
            display: inline-block;
            width: 90px;
        }

        input, textarea {
            font: 1em sans-serif;
            width: 300px;
            box-sizing: border-box;
            border: 1px solid #999;
        }

            input:focus, textarea:focus {
                border-color: #000;
            }

        textarea {
            vertical-align: top;
            height: 5em;
        }

        .button {
            padding-left: 90px;
        }

        button {
            margin-left: .5em;
        }
    </style>
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("CreateOrder", "Home", FormMethod.Post))
{
    <div>
        <label for="orderId">Order Id:</label>
        <input type="text" id="orderId" name="orderId">
    </div>
    <div>
        <label for="userName">Username:</label>
        <input type="text" id="userName" name="userName">
    </div>
    <div class="button">
        <button type="submit">Create Order</button>
    </div>
    
    if(TempData["OrderCreated"] != null && (bool)TempData["OrderCreated"] == true)
    {
        <div>
            <p>Order successfully created! Order id: @TempData["OrderId"]</p>
        </div>
    }
}